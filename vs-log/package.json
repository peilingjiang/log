{
  "name": "vs-log",
  "displayName": "VS Log",
  "icon": "vs-log-icon.png",
  "description": "VS Code extension for a novel logging framework.",
  "version": "0.0.2",
  "engines": {
    "vscode": "^1.70.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onLanguage:javascript",
    "onLanguage:typescript"
  ],
  "main": "./dist/extension.js",
  "publisher": "peiling",
  "contributes": {
    "commands": [
      {
        "command": "vs-log.helloWorld",
        "title": "Hello World"
      }
    ],
    "configuration": {
      "title": "VS Log",
      "displayName": "VS Log",
      "properties": {
        "VS Log.port": {
          "title": "Port",
          "type": "number",
          "default": 2022,
          "description": "The port to communicate with the HyperLog client side (default at 2022)",
          "scope": "window"
        },
        "VS Log.includes": {
          "title": "Included Files",
          "type": "string",
          "markdownDescription": "Files to be parsed by the VS Log server (split with `space`)",
          "default": "**/*.{js,ts}",
          "scope": "window"
        },
        "VS Log.excludes": {
          "title": "Excluded Files",
          "type": "string",
          "markdownDescription": "Files to be excluded from parsing (split with `space`)",
          "default": "**/node_modules/**",
          "scope": "window"
        }
      }
    }
  },
  "scripts": {
    "lint": "eslint .",
    "pretest": "npm run lint",
    "test": "node ./test/runTest.js",
    "build": "vsce package",
    "vsce:login": "vsce login",
    "vscode:prepublish": "npm run package",
    "webpack": "webpack --mode development",
    "start": "webpack --mode development --watch",
    "package": "webpack --mode production --devtool hidden-source-map"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/peilingjiang/log.git"
  },
  "devDependencies": {
    "@types/glob": "^8.0.0",
    "@types/mocha": "^9.1.1",
    "@types/node": "18.x",
    "@types/vscode": "^1.70.0",
    "@vscode/test-electron": "^2.1.5",
    "bufferutil": "^4.0.6",
    "eslint": "^8.23.0",
    "glob": "^8.0.3",
    "mocha": "^10.0.0",
    "typescript": "^4.8.2",
    "utf-8-validate": "^5.0.9",
    "vsce": "^2.11.0",
    "webpack": "^5.74.0",
    "webpack-cli": "^4.10.0"
  },
  "dependencies": {
    "@babel/parser": "^7.18.13",
    "express": "^4.18.1",
    "minimatch": "^5.1.0",
    "socket.io": "^4.5.1",
    "tinycolor2": "^1.4.2",
    "uuid": "^8.3.2"
  }
}
